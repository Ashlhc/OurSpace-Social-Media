        
<div class="profile-page">

    <div class="profile-sidebar">
      <div class="profileimg">
        <img src="{{user.profile_img}}">
      </div>
      <div class="person-name">
        <p>
          {{user.first_name}}<br>
          {{user.last_name}}
        </p>
      </div>
      {{!-- TODO: create logic for add friend button: 
                  - if user is not on your friends list, show add friend button --}}
      <button class="add-friend btn">add friend</button>
      <div class="bio" id="bio">
        <pre>{{user.bio}}</pre>
      </div>
    </div>
  
    <div class="profile-assets">
  
      <div class="friends-and-interests">
  
        <div class="friends">
          <h3>Friends</h3>
          <div class="friends-data">
            {{#each user.friend as |Friend|}}
            <div class="friend-data">  
              <img src="{{friend.profile_img}}">
              <a class="friend-username">{{friend.username}}</a>
            </div>
            {{/each}}
          </div>
        </div>
  
        <div class="interests">
          <h3>Interests</h3>
          <ul class="interests-lists">
            {{#each user.interests}}
            <li class="interest"> {{name}} <button class="delete-interest">X</button></li>
            {{/each}}
          </ul>
        </div>
  
      <div class="edit-prof btn" id="edit-profile">
        <button>Edit Profile</button>
      </div>
  
    </div>
  
  <!-- where all posts and comments are held -->
    <div class="wall">
      <div class="wall-nav">

        {{!-- create post field at top of page --}}
        <form class="create-post">
          <input type="text" placeholder="Tell us what's on your mind" id="make-post">
          <button class="post-btn accent btn">Post</button>
        </form>
        
        {{!-- existing posts --}}
        {{!--TODO: make a for each statment for each post --}}
        {{#each user.posts}}
        <div class="post">

          {{!-- TODO: create a href that takes you to the user's profile when clicking the username <a> tag --}}
          <a href="http://localhost:5678/profile">{{user.id}}</a>

          {{!-- TODO: make a for each statement to create a comment on a post --}}
          {{!-- TODO: edit the <p> --}}
          {{#each user.comments}}
          <div class="comment">
            <p class="comment-text">{{text_content}}</p>
            <!-- TODO: add edit and delete buttons for each comment posted by current user -->
            {{#if is currentUser}}  
            <button class="edit-comment btn">Edit</button>
            <button class="delete-btn btn">Delete</button>
            {{/if}}
          </div>
          {{/each}}

          <form class="create-comment">
            <input type="text" placeholder="Add a comment...">
            <button class="post-btn accent btn">Post</button>
          </form>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  
  
